                        </tr>
                        <tr>
                            <th class="text-left">
                                <t t-esc="o.sale_id.amount_total"/>
                            </th>
                            <th class="text-left">Total</th>
                        </tr>
                        <tr>
                            <th colspan="2" class="text-center">
                                <t t-esc="o.sale_id._get_total_with_user_lang(o.amount_total)"/>
                            </th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </t>
    </template>
    <template id="finance_house_inv_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="one_nagm_sale_reports.finance_invoice_template_id" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
    <template id="forward_invoice_template_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="one_nagm_sale_reports.finance_invoice_template_id" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
