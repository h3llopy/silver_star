<?xml version="1.0" encoding="utf-8"?><odoo>    <data>        <!-- Inherit Form View to Modify it -->        <record id="account_payment_form_inherit" model="ir.ui.view">            <field name="name">account.payment.form.inherit</field>            <field name="model">account.payment</field>            <field name="inherit_id" ref="account.view_account_payment_form"/>            <field name="arch" type="xml">                <xpath expr="//group/group[@name='group2']/field[@name='partner_bank_id']" position="after">                    <field name="employee_id" domain="[('is_rep', '=', True), ]"/>                    <field name="books_ids" invisible="1"/>                    <field name="book_id" domain="[('id', 'in',books_ids)]"/>                    <field name="serial" context="{'default_name':serial}" domain="[('rep_id.id', '=',book_id ),('is_paid','=',False),('serial_type','=','used') ]"/>                </xpath>            </field>        </record>    </data></odoo>