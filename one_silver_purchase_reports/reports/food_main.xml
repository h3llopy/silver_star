<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="one_silver_purchase_reports.paperformat_purchase_import_portrait" model="report.paperformat">
            <field name="name">Food</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">3</field>
            <field name="dpi">90</field>

        </record>

        <record id="one_silver_purchase_reports.report_food_import_report" model="ir.actions.report">
            <field name="name">Food</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-html</field>
            <field name="report_file">one_silver_purchase_reports.report_food_import</field>
            <field name="report_name">one_silver_purchase_reports.report_food_import</field>
            <field name="binding_model_id" ref="model_purchase_order"/>
            <field name="binding_type">report</field>
        </record>

        <template id="one_silver_purchase_reports.report_food_import_document">
            <style>
                .triangle {
                width: 0;
                height: 0;
                border-left: 90px solid transparent;
                border-right: 90px solid transparent;
                border-bottom: 145px solid black;
                position:relative;
                }
                .triangle:after{
                content:'';
                position:absolute;
                top:5px;
                left:-85px;
                width: 0;
                height: 0;
                border-left: 85px solid transparent;
                border-right: 85px solid transparent;
                border-bottom: 137px solid white;

                }
                .triangle-text{
                position:absolute;
                top: 70px;
                width: 100px;
                left: -55px;
                text-align: center;
                font-size: 16px;
                font-family: arial;
                display:block;
                z-index:99999
                }
            </style>
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
            <div class="row">
                <div class="col-6">
                    <div class="row">
                        <span class="col-3">Supplier :</span>
                        <span class="col-9">
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                            <p t-if="o.partner_id.vat"><t t-esc="o.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>:
                                <span t-field="o.partner_id.vat"/>
                            </p>
                        </span>
                    </div>
                    <div class="row  mt-2">
                        <span class="col-3">Ship To:</span>
                        <div t-field="o.company_id.partner_id" class="col-9"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'
                        />

                    </div>
                </div>
                <div class="col-6">
                    <div class="row">
                        <span class="col-5">Purchase Order No :</span>

                        <div t-if="o.state in ['draft', 'sent', 'to approve']" class="col-7">
                            <span t-if="o.one_sequence" >
                                <span t-field="o.one_sequence"/>
                            </span>
                            <span t-else="">
                                <span t-field="o.name"/>
                            </span>
                        </div>
                        <div t-if="o.state in ['purchase', 'done']" class="col-7">
                            <span t-if="o.one_sequence">
                                <span t-field="o.one_sequence"/>
                            </span>
                            <span t-else="" >
                                <span t-field="o.name"/>
                            </span>
                        </div>
                        <div t-if="o.state == 'cancel'" class="col-7">
                            <span t-if="o.one_sequence" >
                                <span t-field="o.one_sequence"/>
                            </span>
                            <span t-else="" >
                                <span t-field="o.name"/>
                            </span>
                        </div>

                    </div>
                    <div class="row">
                        <span class="col-5">Date :</span>
                        <span t-esc="o.date_order" class="col-7"/>
                    </div>
                    <div class="row">
                        <span class="col-5">Payment Terms :</span>
                        <span t-esc="o.payment_term_id.name" class="col-7"/>
                    </div>
                    <div class="row">
                        <span class="col-5">Delivery Schedule :</span>
                        <span t-esc="o.delivery_schedule" class="col-7"/>
                    </div>
                    <div class="row mt-4">
                        <span class="col-5">Total Amount :</span>
                        <span class="col-7"
                              t-esc="o.amount_total"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                        />

                    </div>
                    <div class="row  mt-3">
                        <span class="col-5">Your Reference :</span>
                        <span class="col-7">
                            <span t-esc="o.partner_ref" />
                            <span t-esc="o.partner_ref_date"/>
                        </span>
                    </div>
                </div>
            </div>
            <div class="page mt-4">
                <div class="oe_structure"/>


                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th name="th_description">
                                <strong>Description</strong>
                            </th>
                            <th name="th_taxes">
                                <strong>Taxes</strong>
                            </th>
                            <th name="th_date_req" class="text-center">
                                <strong>Date Req.</strong>
                            </th>
                            <th name="th_quantity" class="text-right">
                                <strong>Qty</strong>
                            </th>
                            <th name="th_price_unit" class="text-right">
                                <strong>Unit Price</strong>
                            </th>
                            <th name="th_amount" class="text-right">
                                <strong>Amount</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-foreach="o.order_line" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td id="product">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td name="td_taxes">
                                        <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.date_planned"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_qty"/>
                                        <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_subtotal"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99" id="section">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99" id="note">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                            <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99" id="subtotal">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div id="total" class="row justify-content-end">

                    <div class="col-12">
                        <table class="table table-sm">
                            <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                            <t t-call="account.document_tax_totals"/>

                        </table>

                    </div>
                    <div class="col-12">
                        <div class="row justify-content-end"><div class="col-12"> </div></div>
                    </div>
                </div>

                <p t-field="o.notes"/>
                <div class="oe_structure"/>
            </div>
            <div class="row">
                <div class="col-4"><span></span></div>
                <div class="col-4">
                    <div class="row">
                        <div class="triangle">
                            <span class="triangle-text" style="font-size:13px;font-weight: bold;">
                                <p class="m-0 p-0">SHAKER</p>
                                <span t-esc="o.one_sequence"/>
                                <p>Kuwait</p>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-4"><span></span></div>
            </div>
        </template>

        <template id="one_silver_purchase_reports.report_food_import">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <t t-call="one_silver_purchase_reports.report_food_import_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>

