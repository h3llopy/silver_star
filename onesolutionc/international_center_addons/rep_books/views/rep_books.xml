<?xml version="1.0" encoding="utf-8"?><odoo>    <data>       <record id="rep_books_form" model="ir.ui.view">           <field name="name">rep.books.form</field>           <field name="model">rep.books</field>           <field name="arch" type="xml">               <form string="Rep Books">				   <header>	<button name="apply" type="object" string="Apply" states="draft"/>					   <field name="state" widget="statusbar"/></header>                   <sheet><div class="oe_title">	<field name="book_type" widget="radio" class="oe_edit_only" options="{'horizontal': true}"/>                        <h1>                            <field name="name" placeholder="Employee" domain="[('is_rep', '=',True ), ]" attrs="{'invisible' : [('book_type', 'not in', ['receive','send'])]}"/>                        </h1>                    </div>						   <group>							   <group>								   <field name="book_num" attrs="{'invisible' : [('book_type', 'not in', ['receive','send'])]}"/>								   <field name="serial_from" attrs="{'invisible' : [('book_type', 'not in', ['receive','send'])]}"/>								   <field name="serial_to" attrs="{'invisible' : [('book_type', 'not in', ['receive','send'])]}"/>							   </group>							   <group/>						   </group>                       <notebook attrs="{'invisible' : [('book_type', 'not in', ['receive','send'])]}">                           <page string="Book Lines">                               <group><field name="lines_ids" nolabel='1' attrs="{'invisible' : [('book_type', 'not in', ['receive','send'])]}">                                <tree create='0' delete="0" editable="bottom">                                    <field name="serial"/>                                    <field name="partner_id"/><field name="is_paid"/>                                    <field name="date"/>                                    <field name="amount"/>                                    <field name="serial_type"/>                                </tree>                            </field>                               </group>                           </page>                       </notebook>                   </sheet>               </form>           </field>       </record>		<record id="rep_books_tree" model="ir.ui.view">		    <field name="name">rep.books.tree</field>		    <field name="model">rep.books</field>		    <field name="arch" type="xml">		        <tree string="Rep Books">		            <field name="book_num"/>		            <field name="name"/><!--		            <field name="state"/>-->		        </tree>		    </field>		</record><record id="rep_book_action" model="ir.actions.act_window">    <field name="name">Rep Books</field>    <field name="type">ir.actions.act_window</field>    <field name="res_model">rep.books</field>    <field name="view_mode">tree,form</field></record><!-- This Menu Item must have a parent and an action --><menuitem id="rep_books_menu_action" name="Rep Books" parent="account.account_account_menu" action="rep_book_action" sequence="3"/>    </data></odoo>