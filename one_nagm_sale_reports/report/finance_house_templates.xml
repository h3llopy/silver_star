<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="finance_sale_template_id">
        <t t-call="web.external_layout">
            <div class="page">
                <div class="row">
                    <div>
                        <strong class="text-left">
                            <h3 t-esc="o.create_uid.name"/>
                        </strong>
                        <strong class="text-left">
                            <h6 t-esc="time.strftime('%a %d %b %Y')"/>
                        </strong>
                        <strong class="text-left">
                            <h6 t-esc="time.strftime('%I:%M %p')"/>
                        </strong>
                    </div>

                </div>
                <div style="margin-left:600px;">
                    <strong class="text-right">
                        <h6 t-esc="o.partner_id.barcode"/>
                    </strong>
                    <strong class="text-right">
                        <h6 t-esc="o.partner_id.name"/>
                    </strong>
                    <strong class="text-right">
                        <h6 t-esc="o.get_delivery_address(o.partner_shipping_id.id)"/>
                    </strong>
                </div>
                <table class="table table-borderless m-0" style=" border: none !important;">
                    <tbody>
                        <tr>
                            <td class="text-left"><t t-esc="o.user_id.name"/></td>
                            <td class="text-left"><t t-esc="o.purchase_order_id.name"/></td>
                            <td class="text-left"><t t-esc="o.one_sequence"/></td>
                        </tr>
                        <tr>
                            <td/>
                            <td class="text-left"><t t-esc="o.purchase_order_id.date_order"/></td>
                            <td class="text-left"><t t-esc="o.date_order"/></td>
                        </tr>
                    </tbody>
                </table>
                <table class="table table-condensed">
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="l">
                            <td class="text-right">
                                <t t-esc="l.price_subtotal"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="l.product_uom_qty"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="l.price_unit"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="l.product_id.weight"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="l.product_id.uom_id.rounding"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="l.product_uom.name"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="l.name"/>
                            </td>
                            <td class="text-right">
                                <t t-esc="l.product_id.name"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th class="text-left">
                                <t t-esc="sum(o.order_line.mapped(lambda r: r.product_uom_qty * r.price_unit))-o.amount_untaxed"/>
                            </th>
                            <th style="width:5%;" class="text-left">Discount</th>
                        </tr>
                        <tr>
                            <th class="text-left">
                                <t t-esc="o.amount_untaxed"/>
                            </th>
                            <th class="text-left">Value</th>
                        </tr>
                        <tr>
                            <th class="text-left">
                                <t t-esc="o.amount_tax"/>
                            </th>
                            <th class="text-left">Tax</th>

                        </tr>
                        <tr>
                            <th class="text-left">
                                <t t-esc="o.amount_total"/>
                            </th>
                            <th class="text-left">Total</th>
                        </tr>
                        <tr>
                            <th colspan="2" class="text-center">
                                <t t-esc="o._get_total_with_user_lang(o.amount_total)"/>
                            </th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </t>
    </template>
    <template id="finance_house_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="one_nagm_sale_reports.finance_sale_template_id" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
    <template id="finance_house_template_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="one_nagm_sale_reports.finance_sale_template_id" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
