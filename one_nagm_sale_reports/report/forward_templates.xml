<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="forward_sale_template">
        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
        <div class="row  mx-3">
            <div class="col">
                <div class="row">
                    <div class="col-10">
                        <div class="row  d-block  text-center">
                            <span>
                                Credit
                            </span>
                            <span></span>
                        </div>
                    </div>
                    <div class="col-1"></div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="row  d-block text-left">
                            <span t-esc="o.one_sequence"/>
                        </div>
                        <div class="row  d-block text-left">
                            <span t-esc="o.partner_shipping_id.phone"/>
                        </div>
                        <div class="row  d-block text-left">
                            <span t-esc="o.user_id.name"/>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="row  d-block text-right">
                            <span t-field="o.date_order"/>
                        </div>
                        <div class="row  d-block text-right">
                            <span t-esc="o.partner_id.name"/>
                        </div>
                        <div class="row  d-block text-right">
                            <span t-esc="o.partner_shipping_id.name"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="page">
            <div class="oe_structure"/>
            <table class="table table-borderless table-sm o_main_table ">
                <thead style="display: table-row-group">
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="o.order_line" t-as="l">
                        <tr>
                            <td class="text-left">
                                <t t-esc="l.product_id.name"/>
                                <t t-if="l.discount != 0">
                                    <t t-esc="l.discount"/>
                                </t>
                            </td>
                            <td class="text-left">
                                <t t-esc="l.product_uom.name"/>
                            </td>
                            <td class="text-left">
                                <t t-esc="l.product_uom.factor_inv"/>
                            </td>
                            <td class="text-left">
                                <t t-esc="l.product_uom_qty"/>
                            </td>
                            <td class="text-left">
                                <t t-esc="l.price_unit"/>
                            </td>
                            <td class="text-left">
                                <t t-esc="l.price_subtotal"/>
                            </td>
                        </tr>
                    </t>
                    <tr>
                        <td colspan="5"></td>
                        <td class="text-left">
                            <t t-esc="o.amount_undiscounted"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5"></td>
                        <td class="text-left">
                            <t t-esc="o.amount_undiscounted - o.amount_total"/>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td colspan="3" class="text-left">
                            <t t-esc="o._get_total_with_user_lang(o.amount_total)"/>
                        </td>
                        <td></td>
                        <td class="text-left">
                            <t t-esc="o.amount_total"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="clearfix"></div>
    </template>
    <template id="forward_sale_document">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <t t-call="one_nagm_sale_reports.forward_sale_template" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
    <record id="forward_sale_action_report" model="ir.actions.report">
        <field name="name">Forward Sale</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">one_nagm_sale_reports.forward_sale_document</field>
        <field name="report_file">one_nagm_sale_reports.forward_sale_document</field>
        <field name="print_report_name">('Forward Sale - %s' %(object.name))</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
