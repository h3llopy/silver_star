    <template id="sultan_invoice_report_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="one_nagm_sale_reports.invoice_template_id" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
    <template id="sultan_invoice_template_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="one_nagm_sale_reports.invoice_template_id" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
